<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.price %></td>
        <td><%= course.info %></td>
        
        <% if !course.contents.blank? %>
          <% course.contents.each do  |c| %>
            <%= c.unit_One %>
            <%= c.unit_Two %>
            <%= c.unit_Three %>
            <%= c.unit_Four %>
            <%= c.unit_Five %>
          <%end%>
        <%end%>

        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

