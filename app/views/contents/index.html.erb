<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1"></div>
  </div>
  <h1>Contents</h1>
<table class = "table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Unit one</th>
      <th>Unit two</th>
      <th>Unit three</th>
      <th>Unit four</th>
      <th>Unit five</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.course.name %></td>
        <td><%= content.unit_One %></td>
        <td><%= content.unit_Two %></td>
        <td><%= content.unit_Three %></td>
        <td><%= content.unit_Four %></td>
        <td><%= content.unit_Five %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Content', new_content_path %>
</div>
<br>


